 * @copyright 2015-2017 Contentful GmbH
 * @license   MIT
 */

$paths = [
    __DIR__.'/../vendor/autoload.php', // locally
    __DIR__.'/../../../autoload.php' // dependency
];
foreach ($paths as $path) {
    if (is_file($path)) {
        require_once $path;
        break;
    }
}

$application = new Contentful\Console\Application();
$application->run();
